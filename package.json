{
  "name": "entropic-bond-firebase",
  "version": "1.0.0",
  "publishConfig": {
    "access": "public",
    "branches": [
      "master"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "description": "Firebase plugins for Entropic Bond",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "firebase emulators:exec --project demo-test 'jest'",
    "build": "npm run build-cjs",
    "prepare": "npm run build",
    "build-ts": "cp -r ./src/ ./lib",
    "build-cjs": "tsc -p tsconfig-cjs.json",
    "emulators": "firebase emulators:start --project demo-test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/entropic-bond/entropic-bond-firebase.git"
  },
  "keywords": [
    "firebase",
    "entropic bond"
  ],
  "author": "Josep Seto",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/entropic-bond/entropic-bond-firebase/issues"
  },
  "homepage": "https://github.com/entropic-bond/entropic-bond-firebase#readme",
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^26.0.23",
    "@types/node-fetch": "^2.5.10",
    "git-branch-is": "^4.0.0",
    "husky": "^6.0.0",
    "jest": "^27.0.3",
    "node-fetch": "^2.6.1",
    "semantic-release": "^17.4.3",
    "ts-jest": "^27.0.2",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "entropic-bond": "^1.4.1",
    "firebase": "^8.6.3"
  },
  "husky": {
    "hooks": {
      "pre-push": "if git-branch-is master; then npm test; fi"
    }
  }
}
