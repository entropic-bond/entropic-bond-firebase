{
  "name": "@entropic-bond/firebase",
  "version": "1.8.0",
  "publishConfig": {
    "access": "public",
    "branches": [
      "master"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "description": "Firebase plugins for Entropic Bond",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "npm run install-functions-dependencies && firebase emulators:exec --project demo-test 'jest --forceExit'",
    "build": "npm run build-cjs",
    "prepare": "npm run build",
    "build-ts": "cp -r ./src/ ./lib",
    "build-cjs": "tsc -p tsconfig-cjs.json",
    "emulators": "firebase emulators:start --project demo-test",
    "install-functions-dependencies": "cd functions && npm ci"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/entropic-bond/entropic-bond-firebase.git"
  },
  "keywords": [
    "firebase",
    "entropic bond"
  ],
  "author": "Josep Seto",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/entropic-bond/entropic-bond-firebase/issues"
  },
  "homepage": "https://github.com/entropic-bond/entropic-bond-firebase#readme",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.0",
    "@types/node-fetch": "2.6.3",
    "git-branch-is": "^4.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "node-fetch": "2.6.8",
    "semantic-release": "^21.0.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4",
    "xhr2": "^0.2.1"
  },
  "dependencies": {
    "entropic-bond": "^1.41.0",
    "firebase": "^9.19.1"
  },
  "husky": {
    "hooks": {
      "pre-push": "if git-branch-is master; then npm test; fi"
    }
  }
}
