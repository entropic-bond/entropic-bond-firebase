  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^11.0.1",
    "firebase-functions": "^3.24.1"
  },
  "devDependencies": {
    "typescript": "^4.8.4"
  },
  "private": true
}
